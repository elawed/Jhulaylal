@model IEnumerable<JhulayLal_Enterprise.Models.AspNetSale>

@{
    ViewBag.Title = "Today's Sales";
}


<script>
    function printout() {
        print($('#abc').html());
    }
</script>
<div id="abc">
   
        <div class="box box-primary">
            <div class="box-header with-border">
                <Center> <h3> Summary of all the sales made today</h3></Center>
            </div>
            <div style="overflow-x:auto;">
                <div class="box-body">
                    <table class="table table-bordered table-hover">

                        <tr>
                            <th>
                                Customer Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Particular)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Received)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remaining)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AspNetBill.Truck_No)
                            </th>


                        </tr>

                        @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetCustomer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Particular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Received)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remaining)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetBill.Truck_No)
                        </td>

                    </tr>
                    }

                    </table>
                </div>
                <div class="box-footer">
                    <input type="button" class="btn btn-primary" onclick="printout()" value="Print" />
                </div>
            </div>
    </div>
</div>